# Bolt.diy Environment Variables
# Copy this file to .env.local and fill in your API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Generative AI Configuration
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key_here

# Cohere API Configuration
COHERE_API_KEY=your_cohere_api_key_here

# Mistral AI Configuration
MISTRAL_API_KEY=your_mistral_api_key_here

# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Perplexity API Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Together AI Configuration
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_API_BASE_URL=https://api.together.xyz

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here

# OpenRouter API Configuration
OPEN_ROUTER_API_KEY=your_openrouter_api_key_here

# xAI (Grok) Configuration
XAI_API_KEY=your_xai_api_key_here

# HuggingFace API Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Amazon Bedrock Configuration
AWS_BEDROCK_CONFIG=your_aws_bedrock_config_here

# GitHub Copilot Configuration
GITHUB_API_KEY=your_github_copilot_api_key_here

# Ollama Configuration
# For local development
OLLAMA_API_BASE_URL=http://127.0.0.1:11434
OLLAMA_LOCAL_URL=http://127.0.0.1:11434

# For production (Cloudflare Pages) - replace with your actual Ollama server URL
# OLLAMA_API_BASE_URL=https://your-ollama-server.com
# OLLAMA_REMOTE_URL=https://your-ollama-server.com

# Ollama API Key (if using Ollama Cloud or authenticated server)
OLLAMA_API_KEY=your_ollama_api_key_here

# LM Studio Configuration (Local)
LM_STUDIO_API_BASE_URL=http://localhost:1234

# Hyperbolic AI Configuration
HYPERBOLIC_API_KEY=your_hyperbolic_api_key_here

# Application Configuration
VITE_LOG_LEVEL=debug
DEFAULT_NUM_CTX=32768
RUNNING_IN_DOCKER=false
NODE_ENV=development

# Optional: Custom Base URLs for providers
# OPENAI_API_BASE_URL=https://api.openai.com
# ANTHROPIC_API_BASE_URL=https://api.anthropic.com
# GOOGLE_API_BASE_URL=https://generativelanguage.googleapis.com
